<%= current_user.id %>
<%= params[:id] %>
<%= current_user.admin %>

<body class = "d-block">
<div class="row">
  <div class="col-4">
    <div class="image-wrapper">
      <img src="https://dummyimage.com/175x250/000/fff"/>
    </div>
    <div class="profile-info">
      <h3><%= "#{@student.first_name} #{@student.last_name}" %></h3>
      <span class="email-address"><%= @student.email_address %></span>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>Email address:</strong>
  <%= @student.email_address %>
</p>

<p>
  <strong>Location address:</strong>
  <%= @student.location_address %>
</p>

<p>
  <strong>Location city:</strong>
  <%= @student.location_city %>
</p>

<p>
  <strong>Location state:</strong>
  <%= @student.location_state %>
</p>

<p>
  <strong>Location zip:</strong>
  <%= @student.location_zip %>
</p>

<p>
  <strong>Mobile phone number:</strong>
  <%= @student.mobile_phone_number %>
</p>
<div class="row">
  <div class="small-2 large-2 columns">
    <%= imdb_style_rating_for @student, current_user%>
  </div>
  <br>
  <div class="small-2 large-4 columns">
    <% if current_user %>
      Visual Effects: <%= rating_for @student, "visual_effects" %>
      <br>
      Original Score: <%= rating_for @student, "original_score" %>
      <br>
      Director: <%= rating_for @student, "original_score" %>
      <br>
      Custome Design: <%= rating_for @student, "custome_design" %>
    <% end %>
  </div>
</div>
<% if  (current_user.id.to_s == params[:id].to_s) || (current_user.admin == true)  %>
<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
</body>
<% else %>
<h1> User Not Matching</h1>
<% end %>
